{
  "name": "zwf-app",
  "version": "1.0.0",
  "description": "ZWF server",
  "main": "src/index.js",
  "scripts": {
    "test": "jest",
    "up": "node index.js",
    "start:prod": "pnpm link-web && pnpm build && NODE_ENV=prod TZ=utc node index.js",
    "start": "NODE_ENV=dev TZ=utc GIT_HASH=$(git rev-parse --short HEAD) ts-node index.ts",
    "dev": "NODE_ENV=dev TZ=utc GIT_HASH=$(git rev-parse --short HEAD) pnpm clean && nodemon -w src --ext ts --exec npm start",
    "build": "pnpm lint && pnpm clean && pnpm compile",
    "build:prod": "rm -rf www && pnpm compile",
    "clean": "ts-clean && rm -rf www",
    "compile": "tsc",
    "lint": "tslint -c tslint.json -p tsconfig.json --fix",
    "link-web": "rm -rf www && ln -sfn \"$(pwd)/../zwf-web/build\" www",
    "sync:schema": "TZ=utc ts-node endpoints/sync-db-schema.ts",
    "sync:schema:prod": "TZ=utc node endpoints/sync-db-schema",
    "emailer": "TZ=utc ts-node endpoints/index-email.ts",
    "emailer:prod": "TZ=utc node endpoints/index-email",
    "index-subscription": "TZ=utc ts-node endpoints/index-subscription.ts",
    "index-subscription:prod": "TZ=utc node endpoints/index-subscription",
    "migrate:up": "pnpm typeorm migration:run",
    "migrate:down": "pnpm typeorm migration:revert",
    "migrate:new": "pnpm typeorm migration:create -- -n",
    "migrate:gen": "ts-node typeorm migration:generate -n",
    "typeorm": "TS_NODE_PROJECT=tsconfig.ts-node.json TS_NODE_TRANSPILE_ONLY=true ts-node ./node_modules/typeorm/cli.js"
  },
  "author": "techseeding2020@gmail.com",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^26.0.20",
    "jest": "^26.6.3",
    "nodemon": "^2.0.4",
    "ts-clean": "^1.0.3",
    "ts-jest": "^26.4.4",
    "ts-node": "^10.9.1",
    "tslint": "^6.1.2",
    "typescript": "^4.2.4"
  },
  "dependencies": {
    "@types/express": "^4.17.13",
    "@types/node": "^14.0.5",
    "aws-sdk": "^2.686.0",
    "cheerio": "^1.0.0-rc.12",
    "colors": "^1.4.0",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.5",
    "cors": "^2.8.5",
    "delay": "^4.4.0",
    "dotenv": "^8.2.0",
    "email-templates": "^7.1.1",
    "error-to-json": "^2.0.0",
    "express": "^4.17.1",
    "express-async-handler": "^1.1.4",
    "express-fileupload": "^1.1.7-alpha.3",
    "express-list-endpoints": "^4.0.1",
    "express-sse-middleware": "^3.0.3",
    "handlebars": "^4.7.7",
    "html-to-text": "^7.0.0",
    "http-assert": "^1.4.1",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.21",
    "md5": "^2.3.0",
    "mjml": "^4.12.0",
    "moment": "^2.27.0",
    "moment-timezone": "^0.5.32",
    "node-fetch": "^2.6.1",
    "nodemailer": "^6.4.14",
    "object-hash": "^3.0.0",
    "pg": "^8.7.3",
    "puppeteer": "^14.1.1",
    "redis": "^3.1.1",
    "request-ip": "^2.1.3",
    "rxjs": "^7.5.5",
    "serialize-error": "^7.0.1",
    "serve-static": "^1.14.1",
    "stripe": "^8.148.0",
    "swagger-routes-express": "^3.1.2",
    "tfn": "^1.0.0",
    "typeorm": "0.3.7",
    "uniqolor": "^1.0.1",
    "uuid": "^8.3.0",
    "voucher-code-generator": "^1.1.1",
    "yamljs": "^0.3.0"
  }
}
